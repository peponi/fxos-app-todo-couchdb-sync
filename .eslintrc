{
    "plugins": [
        "scanjs-rules",
        "no-unsafe-innerhtml"<% if (useComponentFramework == 'react') { %>,
        "react"<% } %>
    ],<% if (useESnext) { %>
    "ecmaVersion": 6,<% } %><% if (useESnextModules) { %>
    "ecmaFeatures": {
        "modules": true<% if (useComponentFramework == 'react') { %>,
        "jsx": true<% } %>
    },
    "parserOptions": {
        "sourceType": "module"
    },<% } %>
    "env": {
        "browser": true <% if (useBackend == 'expressjs' || useBackend == 'sailsjs' || useBackend == 'hoodie') { %>,
        "node": true <% } %><% if (useESnext) { %>,
        "amd": true,
        "es6": true <% } %><% if (useTestFramework == 'jasmine') { %>,
        "jasmine": true <% } %><% if (useFunctionalTesting) { %>,
        "phantomjs": true <% } %><% if (useJquery) { %>,
        "jquery": true <% } %>
    },<% if (useESnext) { %>
        "ecmaVersion": 6,<% } %>
    "globals": {
        "_": true,
        "NIJS": true <% if (useJquery) { %>,
        "jQuery": false,
        "$": true <% } %><% if (useComponentFramework == 'knockout') { %>,
        "ko": true <% } %><% if (useComponentFramework == 'react') { %>,
        "React": true <% } %>
        
    },
    "rules": {
        "indent": [2, 4],
        "quotes": [2, "single"],
        "linebreak-style": [2, "unix"],
        "semi": [2, "always"],
        "spaced-comment": [2, "always"],
        "valid-jsdoc": [2,{
            "prefer": {
                "return": "return"
            },
            "requireReturn": false
        }],
        "camelcase": [2, {"properties": "always"}],
        "no-underscore-dangle": [2, { "allowAfterThis": true }],
        "no-empty": 2,
        "no-invalid-regexp": 2,
        "no-unreachable": 2,
        "block-scoped-var": 2,
        "default-case": 2,
        "eqeqeq": 2,
        "no-alert": 2,
        "no-eq-null": 2,
        "no-lone-blocks": 2,
        "no-unused-vars": 2,
        "yoda": 2,
        "comma-spacing": [2, { "before": false, "after": true }],
        "array-bracket-spacing": [2, "always"],
        "eol-last": 2,
        "strict": [2, "global"]
    }
}